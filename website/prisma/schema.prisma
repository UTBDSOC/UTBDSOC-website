// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model GraamysNomination {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  
  academicWeapon String?
  dancer         String?
  melodiousVoice String?
  olympian       String?
  gymshark       String?
  fashionIcon    String?
  bestCook       String?
  bestEvent      String?
  bestSociety    String?
}